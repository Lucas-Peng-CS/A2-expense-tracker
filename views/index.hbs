<div class="container">
  <div class="row ">
    <div class="col-4 mx-auto">
      <form action="">
        <div class="form-group">
          <select class="form-control mt-4" id="exampleFormControlSelect1">
            {{!-- selected disabled 選擇功能關閉 --}}
            <option selected disabled>類別</option>
            <option value="家居物業">家居物業</option>
            <option value="交通出行">交通出行</option>
            <option value="休閒娛樂">休閒娛樂</option>
            <option value="餐飲食品">餐飲食品</option>
            <option value="其他">其他</option>
          </select>
        </div>
      </form>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-1 align-self-center">總金額:</div>
    <div class="col-3 totalAmount text-right mr-2" style="color:rgb(250, 197, 137)">
      <h1>{{this.totalAmount}}</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-5 mx-auto table-striped">
      <table class="w-100">
        <tbody>
          {{#each records}}
            <tr>
              <td class=" pt-2 text-center">

                {{#each ../categories}}
                  {{!-- handlebars-helper is 功能  a === b 就渲染 --}}
                  {{#is ../this.category this.name}}
                    <span style="color:rgb(0, 174, 255)">{{{this.icon}}}</span>
                  {{/is}}
                {{/each}}
              </td>
              <td>
                <div class="d-flex flex-column py-1">
                  <span>{{this.name}}</span>
                  <small>{{this.date}}</small>
                </div>
              </td>
              <td class="text-right">
                {{this.amount}}
                <a class="btn btn-success btn-sm ml-2 mr-1" href="/expenses/{{this._id}}/edit" role="button">修改</a>
                <a class="btn btn-danger btn-sm mr-2" href="/expenses/{{this._id}}/edit" role="button">刪除</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center">
    <a class="btn btn-warning text-light mt-2" href="./expenses/new" role="button">新增支出</a>
  </div>
</div>